<% layout ('layout') -%>

<div class="row">
     <div class="col-lg-4 col-md-offset-3">
         <h1>Edit Profile</h1>
         <% if(message.length>0){ %>
         <div class="alert alert-success alert-dismissible">
           <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
           <%=message %>
         </div>
         <%}%>
     
           
         <form method="post">

          

            <div class="form-group">  
             <label="name">Name: </label>  
             <input type="name" class="form-control"value="<%=user.profile.name%>" name="name">
            </div>

            <div class="form-group"> 
            <label="address">Address: </label>   
             <input type="address" class="form-control" value="<%=user.address%>" name="address">
            </div>
            <button class="btn btn-success" action="submit">Submit</button>
         </form>
     </div>
</div>